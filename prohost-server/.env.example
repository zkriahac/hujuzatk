# Database (PostgreSQL via Supabase or local)
DATABASE_URL="postgresql://postgres:password@localhost:5432/prohost"

# Server Configuration
NODE_ENV=development
PORT=4000
GRAPHQL_PATH=/graphql

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-key-generate-this-properly-min-32-chars
JWT_REFRESH_SECRET=your-different-refresh-secret-key-min-32-chars
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# CORS Configuration
FRONTEND_URL=http://localhost:5173
FRONTEND_PROD_URL=https://yourdomain.com

# Logging
LOG_LEVEL=info

# Trial Configuration
TRIAL_DAYS=14

# Email (optional, for future notifications)
SENDGRID_API_KEY=
SMTP_HOST=
SMTP_PORT=

# Payment Processing (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
